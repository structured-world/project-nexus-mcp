{
  "compilerOptions": {
    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,


    /* Emit */
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,

    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022"],

    /* Other */
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}